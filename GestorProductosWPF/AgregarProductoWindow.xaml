<Window x:Class="GestorProductosWPF.AgregarProductoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorProductosWPF"
        mc:Ignorable="d"
        Title="AgregarProductoWindow" Height="450" Width="800"
        Background="#F5F5F5" >
    <Grid>

        <Grid.Resources>
            <Style TargetType="TextBox">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="5,0,0,0"/>
                <Setter Property="BorderBrush" Value="#007ACC"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="#333333"/>
                <Setter Property="Margin" Value="0,10,0,0"/>
            </Style>

            <Style TargetType="Button">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Background" Value="#007ACC"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#005C99"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#003D66"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <TextBox x:Name="txtID" HorizontalAlignment="Left" Margin="42,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" Height="37" ToolTip="Ingrese el ID del producto"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Margin="42,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" Height="37" ToolTip="Ingrese el Nombre del producto"/>
        <TextBox x:Name="txtCodigoBarras" HorizontalAlignment="Left" Margin="42,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" Height="37" ToolTip="Ingrese el Código de Barras"/>
        <TextBox x:Name="txtCategoria" HorizontalAlignment="Left" Margin="42,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" Height="37" ToolTip="Ingrese la Categoría"/>
        <TextBox x:Name="txtPrecio" HorizontalAlignment="Left" Margin="42,265,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" Height="37" ToolTip="Ingrese el Precio"/>
        <TextBox x:Name="txtStock" HorizontalAlignment="Left" Margin="42,329,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" Height="37" ToolTip="Ingrese el Stock o Cantidad"/>

        <TextBlock Text="Id:" HorizontalAlignment="Left" Margin="42,20,0,0" VerticalAlignment="Top" FontSize="12" Foreground="#666666"/>
        <TextBlock Text="Nombre:" HorizontalAlignment="Left" Margin="42,75,0,0" VerticalAlignment="Top" FontSize="12" Foreground="#666666"/>
        <TextBlock Text="Código de Barras:" HorizontalAlignment="Left" Margin="42,130,0,0" VerticalAlignment="Top" FontSize="12" Foreground="#666666"/>
        <TextBlock Text="Categoría:" HorizontalAlignment="Left" Margin="42,187,0,0" VerticalAlignment="Top" FontSize="12" Foreground="#666666"/>
        <TextBlock Text="Precio:" HorizontalAlignment="Left" Margin="42,244,0,0" VerticalAlignment="Top" FontSize="12" Foreground="#666666"/>
        <TextBlock Text="Stock:" HorizontalAlignment="Left" Margin="42,306,0,0" VerticalAlignment="Top" FontSize="12" Foreground="#666666"/>

        <Button x:Name="btnGuardar" Content="Guardar" HorizontalAlignment="Left" Margin="480,141,0,0" VerticalAlignment="Top" Height="51" Width="192" Click="btnGuardar_Click"/>

    </Grid>
</Window>
